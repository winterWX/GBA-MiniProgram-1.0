.share-wrap {
  width: 100%;
}
.share-back {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.52);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 888;
}

.share-container {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  top: 20rpx;
  z-index: 999;
  width: 630rpx;
  margin: 0 auto;
}
.share-image {
  width: 548rpx;
  height: 758rpx !important;
  margin: 60rpx auto 45rpx auto;
  display: block;
  border-radius: 16rpx;
  box-shadow: 0px 4rpx 8px 0px rgba(0, 0, 0, 0.1);
}
.save-btn {
  margin-top: 20rpx;
}
.van-button--large {
  width: 630rpx !important;
}

.share-tips{
  background-color: rgba(0, 0, 0, 0.52) !important;
  width: 620rpx;
  height: 100rpx;
  line-height: 100rpx;
  width: 100%;
  text-align: center;
  font-size: 28rpx;
  margin: 20rpx 0;
  color: #ffffff;
  border: 1rpx solid #ffffff;
  border-radius: 4rpx;
  font-size: 32rpx;
}
.lineSty{
  width: 100%;
  height: 20rpx;
}
.van-button--primary {
  background-color: #00a865 !important;
  border: 1px solid #00a865 !important;
}